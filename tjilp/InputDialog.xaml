<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    x:Class="tjilp.InputDialog"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen" 
    SizeToContent="WidthAndHeight"
    MinWidth="300"
    MinHeight="100"
    WindowStyle="None"
    ResizeMode="CanMinimize" Closed="Window_Closed" AllowsTransparency="True" Opacity="0.82" MouseDown="Window_MouseDown" Background="#FFE0E0E0" Topmost="True">
    <StackPanel Margin="5">
        <TextBlock x:Name="Question" Margin="5" TextAlignment="Center" FontSize="18"><Run Language="nl-nl" Text="Enter returned code."/></TextBlock>
        <TextBox x:Name="InputBox" TextAlignment="Center" FontSize="24" PreviewTextInput="InputBox_PreviewTextInput" UndoLimit="5" />
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_Ok" IsDefault="True" Margin="5" x:Name="btnOk" Click="OK_Click" Width="47" />
            <Button Content="_Cancel" IsCancel="True" Margin="5" x:Name="btnCancel" Click="Cancel_Click" Width="43" />
        </StackPanel>
    </StackPanel>
</Window>
